	name = "volcano_eruption_entity"
	
	locator = { name = root }
	
	default_state = "start"
	state = { name = "start" state_time = 110 looping = no }
	
	attach = { root = "volcano_eruption_effect_entity" }
}

entity = {
	name = "volcano_eruption_effect_entity"
	
	locator = { name = part1 }
	
	get_state_from_parent = no
	
	default_state = "start"
	state = { name = "start" state_time = 10 looping = no next_state = eruption
		event = { time = 0 node = "part1" particle = "environment/volcano_lava_buildup" keep_particle = yes trigger_once = yes}
		event = { time = 0 node = "part1" particle = "environment/volcano_buildup" keep_particle = yes trigger_once = yes}
		event = { time = 0 node = "part1" particle = "environment/volcano_lava" keep_particle = yes trigger_once = yes}
		start_event = { trigger_once = yes sound = { soundeffect = "event:/SFX/Animations/Map/sfx_anim_map_volcano_buildup" } }
		
	}

#eruption state_time = 8	
	state = { name = "eruption" state_time = 8 looping = no next_state = idle
		event = { time = 0 node = "part1" particle = "environment/volcano_eruption_effect" keep_particle = yes trigger_once = yes}
#		event = { time = 0 node = "part1" particle = "environment/volcano_lava_splash" keep_particle = yes trigger_once = yes}
		event = { time = 0 node = "part1" particle = "environment/volcano_lava" keep_particle = yes trigger_once = yes}
		start_event = { trigger_once = yes sound = { soundeffect = "event:/SFX/Animations/Map/sfx_anim_map_volcano_eruption" } }
		
	}
	
	state = { name = "idle" state_time = 35 looping = no next_state = cooldown
		event = { time = 0 node = "part1" particle = "environment/volcano_lava_splash" keep_particle = yes trigger_once = yes}
		event = { time = 0 node = "part1" particle = "environment/volcano_continued" keep_particle = yes trigger_once = yes}
		event = { time = 0 node = "part1" particle = "environment/volcano_lava" keep_particle = yes trigger_once = yes}
		start_event = { trigger_once = yes sound = { soundeffect = "event:/SFX/Animations/Map/sfx_anim_map_volcano_lava" } }

		
	}
	
	state = { name = "cooldown" state_time = 30 looping = no next_state = end
		event = { time = 0 node = "part1" particle = "environment/volcano_lava" keep_particle = yes trigger_once = yes}
		event = { time = 0 node = "part1" particle = "environment/volcano_cooldown" keep_particle = yes trigger_once = yes}
		start_event = { trigger_once = yes sound = { soundeffect = "event:/SFX/Animations/Map/sfx_anim_map_volcano_cooldown" } }
		
	}	
	
	state = { name = "end" state_time = 30 looping = no
		event = { time = 0 node = "part1" particle = "environment/volcano_lava_gone" keep_particle = yes trigger_once = yes}
		
	}	
}

