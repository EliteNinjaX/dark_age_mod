	blockoverride "body_text" {
		text = "[OverwriteSaveWindow.GetText]"
	}

	blockoverride "cancel_button" {
		onclick = "[OverwriteSaveWindow.Cancel]"
	}

	blockoverride "confirm_button" {
		text = "CONFIRM"
		onclick = "[OverwriteSaveWindow.Confirm]"
